<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>nz.net.osnz.parent</groupId>
		<artifactId>java-parent</artifactId>
		<version>5.4</version>
	</parent>

	<groupId>nz.net.osnz.demos</groupId>
	<artifactId>spring-boot-thymeleaf</artifactId>
	<version>1.0-SNAPSHOT</version>
	<name>spring-boot-thymeleaf</name>
	<packaging>jar</packaging>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<java.version>1.8</java.version>
		<jackson.version>[2.9.2]</jackson.version>
	</properties>

	<!-- Add typical dependencies for a web application -->
	<dependencies>
		<dependency>
			<groupId>nz.net.osnz.composite</groupId>
			<artifactId>composite-spring-mvc</artifactId>
			<version>[4.3.8,5)</version>
		</dependency>
		<dependency>
			<groupId>nz.net.osnz.composite</groupId>
			<artifactId>composite-spring-boot</artifactId>
			<version>[1.6,)</version>
		</dependency>
		<dependency>
			<groupId>nz.net.osnz.composite</groupId>
			<artifactId>composite-jackson</artifactId>
			<version>[2.8,)</version>
		</dependency>

		<dependency>
			<groupId>nz.net.osnz.composite</groupId>
			<artifactId>composite-spring-boot-jetty</artifactId>
			<version>[1.3,)</version>
		</dependency>
		<dependency>
			<groupId>nz.net.osnz.composite</groupId>
			<artifactId>composite-thymeleaf</artifactId>
			<version>[1.2,)</version>
		</dependency>
		<dependency>
			<groupId>org.thymeleaf.extras</groupId>
			<artifactId>thymeleaf-extras-java8time</artifactId>
			<version>3.0.1.RELEASE</version>
		</dependency>
		<!-- WebJars -->
		<dependency>
			<groupId>org.webjars</groupId>
			<artifactId>bootstrap</artifactId>
			<version>3.3.7-1</version>
		</dependency>
		<dependency>
			<groupId>org.webjars</groupId>
			<artifactId>jquery</artifactId>
			<version>3.2.1</version>
		</dependency>
		<!-- Test -->
		<dependency>
			<groupId>nz.net.osnz.composite</groupId>
			<artifactId>composite-spring-boot-test</artifactId>
			<version>[1.3,2)</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>nz.net.osnz.composite</groupId>
			<artifactId>composite-spring-test</artifactId>
			<version>[5.1,6)</version>
			<scope>test</scope>
		</dependency>

	</dependencies>

	<!-- Package as an executable jar -->
	<build>
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
				<version>1.5.8.RELEASE</version>
			</plugin>
		</plugins>
	</build>
</project>
