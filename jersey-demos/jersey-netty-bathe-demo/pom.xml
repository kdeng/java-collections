<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>io.osnz.demos</groupId>
  <artifactId>jersey-netty-bathe-demo</artifactId>
  <version>1.1-SNAPSHOT</version>
  <packaging>jar</packaging>

  <name>jersey-netty-bathe-demo</name>
  <description>jersey-netty-bathe-demo</description>
  <url>https://github.com/kdeng/netty-demos/jersey-netty-bathe-demo1</url>

  <properties>
<!--    <java.version>8</java.version>-->
    <docker.mainClass>nz.net.osnz.demos.jersey.App</docker.mainClass>
  </properties>

  <dependencies>
    <dependency>
      <groupId>nz.net.osnz.composite</groupId>
      <artifactId>composite-jersey-media</artifactId>
      <version>[1,2)</version>
    </dependency>

    <dependency>
      <groupId>nz.net.osnz.composite</groupId>
      <artifactId>composite-jersey-netty</artifactId>
      <version>[1,2)</version>
    </dependency>

    <dependency>
      <groupId>nz.net.osnz.common</groupId>
      <artifactId>cloud-log4j2-over-slf4j-appender</artifactId>
      <version>[1,2)</version>
    </dependency>

    <dependency>
      <groupId>nz.net.osnz.common</groupId>
      <artifactId>common-jackson</artifactId>
      <version>[2.2]</version>
    </dependency>

    <dependency>
      <groupId>nz.net.osnz.composite</groupId>
      <artifactId>composite-logging-log4j2</artifactId>
      <version>[1.4]</version>
    </dependency>

    <dependency>
      <groupId>nz.net.osnz.composite</groupId>
      <artifactId>composite-bathe-runner</artifactId>
      <version>[1,2)</version>
    </dependency>

    <dependency>
      <groupId>org.projectlombok</groupId>
      <artifactId>lombok</artifactId>
      <version>1.18.6</version>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>nz.net.osnz.composite</groupId>
      <artifactId>composite-unit-test</artifactId>
      <version>[6.2]</version>
      <scope>test</scope>
    </dependency>


    <dependency>
      <groupId>com.bluetrainsoftware.bathe.initializers</groupId>
      <artifactId>jul-bridge</artifactId>
      <version>[2.1]</version>
      <exclusions>
        <exclusion>
          <groupId>*</groupId>
          <artifactId>*</artifactId>
        </exclusion>
      </exclusions>
    </dependency>

    <dependency>
      <groupId>nz.net.osnz.composite</groupId>
      <artifactId>composite-groovy</artifactId>
      <version>[6,7)</version>
    </dependency>

  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>io.repaint.maven</groupId>
        <artifactId>tiles-maven-plugin</artifactId>
        <version>2.16</version>
        <extensions>true</extensions>
        <configuration>
          <filtering>false</filtering>
          <tiles>
            <tile>io.osnz.tiles:tile-java11:[1,2)</tile>
<!--            <tile>io.osnz.tiles:tile-jib-docker-bathe:[1,2)</tile>-->
          </tiles>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
