<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>nz.net.osnz</groupId>
        <artifactId>osnz-groovy-parent</artifactId>
        <version>1.2</version>
    </parent>

    <groupId>nz.net.osnz.train</groupId>
    <artifactId>train-extjs</artifactId>
    <version>1.1-SNAPSHOT</version>
    <packaging>war</packaging>

    <name>Train ExtJS</name>
    <description>Train ExtJS</description>
    <url>http://www.osnz.net.nz</url>

    <developers>
        <developer>
            <name>Kefeng Deng</name>
            <email>deng@51any.com</email>
        </developer>
    </developers>

    <scm>
        <url>https://git.oschina.net/kdeng/train-extjs.git</url>
        <connection>scm:git:git@git.oschina.net:kdeng/train-extjs.git</connection>
        <developerConnection>scm:git:git@git.oschina.net:kdeng/train-extjs.git</developerConnection>
    </scm>

    <properties>
        <jetty.maven.plugin.version>8.1.10.v20130312</jetty.maven.plugin.version>
        <sonar.language>groovy</sonar.language>
    </properties>

    <dependencies>

        <dependency>
            <groupId>nz.net.osnz.common</groupId>
            <artifactId>common-extjs</artifactId>
            <version>1.6</version>
        </dependency>

        <dependency>
            <groupId>nz.net.osnz.common</groupId>
            <artifactId>common-bootstrap</artifactId>
            <version>3.3</version>
        </dependency>

        <dependency>
            <groupId>nz.net.osnz.common</groupId>
            <artifactId>common-jawr</artifactId>
            <version>[1.2,)</version>
            <exclusions>
                <exclusion>
                    <groupId>nz.ac.auckland.common</groupId>
                    <artifactId>common-scanner</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>nz.net.osnz.composite</groupId>
                    <artifactId>composite-spring-web</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>nz.net.osnz.composite</groupId>
                    <artifactId>composite-groovy</artifactId>
                </exclusion>
            </exclusions>
        </dependency>

        <dependency>
            <groupId>nz.net.osnz.common</groupId>
            <artifactId>common-scanner</artifactId>
            <version>[1,)</version>
            <exclusions>
                <exclusion>
                    <groupId>nz.net.osnz.composite</groupId>
                    <artifactId>composite-spring</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>nz.net.osnz.composite</groupId>
                    <artifactId>composite-logging</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>nz.ac.auckland.composite</groupId>
                    <artifactId>composite-configuration</artifactId>
                </exclusion>
            </exclusions>
        </dependency>

        <dependency>
            <groupId>nz.ac.auckland.composite</groupId>
            <artifactId>composite-configuration</artifactId>
            <version>[3.2,)</version>
        </dependency>

        <dependency>
            <groupId>nz.net.osnz.composite</groupId>
            <artifactId>composite-logging</artifactId>
            <version>[1,)</version>
        </dependency>

        <dependency>
            <groupId>nz.net.osnz.composite</groupId>
            <artifactId>composite-groovy</artifactId>
            <version>[1,)</version>
        </dependency>

        <dependency>
            <groupId>nz.net.osnz.composite</groupId>
            <artifactId>composite-spring-webmvc</artifactId>
            <version>[1.3,)</version>
        </dependency>

        <dependency>
            <groupId>nz.ac.auckland.common</groupId>
            <artifactId>common-jetty-testhost</artifactId>
            <version>1.5</version>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>nz.ac.auckland.common</groupId>
            <artifactId>common-jetty-testrunner</artifactId>
            <version>1.6</version>
            <scope>test</scope>
        </dependency>

    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.mortbay.jetty</groupId>
                <artifactId>jetty-maven-plugin</artifactId>
                <version>${jetty.maven.plugin.version}</version>
                <configuration>
                    <!--<webAppSourceDirectory>${basedir}/src/main/resources/META-INF/resources/</webAppSourceDirectory>-->
                    <systemProperties>
                        <systemProperty>
                            <name>logback.configurationFile</name>
                            <value>logback.xml</value>
                        </systemProperty>
                    </systemProperties>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>