<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>nz.net.osnz.parent</groupId>
		<artifactId>groovy-parent</artifactId>
		<version>3.5</version>
	</parent>

	<groupId>nz.net.osnz.practice</groupId>
	<artifactId>stencil-web</artifactId>
	<version>1.1-SNAPSHOT</version>
	<packaging>jar</packaging>

	<name>stencil-web</name>
	<description>stencil-web</description>
	<url>https://github.com/kdeng/stencil-web</url>

	<dependencies>

		<dependency>
			<groupId>nz.net.osnz.composite</groupId>
			<artifactId>composite-groovy</artifactId>
			<version>[3.13,)</version>
		</dependency>

		<dependency>
			<groupId>nz.net.osnz.composite</groupId>
			<artifactId>composite-lmz</artifactId>
			<version>[1.5,)</version>
		</dependency>

		<dependency>
			<groupId>nz.net.osnz.lmz</groupId>
			<artifactId>lmz-web</artifactId>
			<version>[1.1,2)</version>
		</dependency>

		<dependency>
			<groupId>nz.net.osnz.lmz</groupId>
			<artifactId>lmz-stencil</artifactId>
			<version>[1.6,2)</version>
		</dependency>

		<dependency>
			<groupId>nz.net.osnz.lmz</groupId>
			<artifactId>lmz-test</artifactId>
			<version>[1.10,)</version>
			<scope>test</scope>
			<exclusions>
				<exclusion>
					<groupId>nz.ac.auckland.common</groupId>
					<artifactId>runnable-war-scss</artifactId>
				</exclusion>
			</exclusions>
		</dependency>

	</dependencies>

	<build>
		<plugins>

			<plugin>
				<groupId>com.bluetrainsoftware.bathe.web</groupId>
				<artifactId>bathe-jetty-jspc-maven-plugin</artifactId>
				<version>1.3</version>
				<executions>
					<execution>
						<id>war-compile-jsp</id>
						<goals>
							<goal>jspc</goal>
						</goals>
						<phase>compile</phase>
					</execution>
				</executions>
			</plugin>

		</plugins>
	</build>

</project>
