<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>nz.net.osnz.parent</groupId>
		<artifactId>groovy-parent</artifactId>
		<version>3.5</version>
	</parent>

	<groupId>nz.net.osnz.practice</groupId>
	<artifactId>ebean-domain</artifactId>
	<version>1.2-SNAPSHOT</version>
	<packaging>jar</packaging>

	<name>ebean-domain</name>
	<description>ebean-domain</description>
	<url>https://github.com/kdeng/ebean-domain</url>

	<dependencies>

		<dependency>
			<groupId>nz.net.osnz.composite</groupId>
			<artifactId>composite-groovy</artifactId>
			<version>[3.13,)</version>
		</dependency>

		<dependency>
			<groupId>nz.net.osnz.common</groupId>
			<artifactId>common-ebean</artifactId>
			<version>[5.2,)</version>
			<exclusions>
				<exclusion>
					<groupId>org.avaje.ebeanorm</groupId>
					<artifactId>avaje-ebeanorm-agent</artifactId>
				</exclusion>
			</exclusions>
		</dependency>

		<dependency>
			<groupId>org.avaje.ebeanorm</groupId>
			<artifactId>avaje-ebeanorm-agent</artifactId>
			<version>[4.7.1]</version>
		</dependency>

		<dependency>
			<groupId>nz.net.osnz.composite</groupId>
			<artifactId>composite-lmz</artifactId>
			<version>[1.5,2)</version>
		</dependency>

		<dependency>
			<groupId>nz.net.osnz.lmz</groupId>
			<artifactId>lmz-test</artifactId>
			<version>[1.10,)</version>
			<scope>test</scope>
			<exclusions>
				<exclusion>
					<groupId>nz.ac.auckland.common</groupId>
					<artifactId>runnable-war-scss</artifactId>
				</exclusion>
			</exclusions>
		</dependency>

		<dependency>
			<groupId>com.h2database</groupId>
			<artifactId>h2</artifactId>
			<version>1.4.187</version>
			<scope>test</scope>
		</dependency>

	</dependencies>


	<profiles>
		<profile>
			<id>test-integration</id>
			<properties>
				<uoa.skip.integration.tests>false</uoa.skip.integration.tests>
				<location.mavenrepo>${user.home}/.m2/repository</location.mavenrepo>
				<ebeanagent.version>4.5.4</ebeanagent.version>
				<ebeanagent.site>${location.mavenrepo}/org/avaje/ebeanorm/avaje-ebeanorm-agent</ebeanagent.site>
				<ebeanagent.jar>avaje-ebeanorm-agent-${ebeanagent.version}.jar</ebeanagent.jar>
			</properties>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-surefire-plugin</artifactId>
						<configuration>
							<argLine>-Xmx1024m -Xms1024m -XX:PermSize=512m -XX:MaxPermSize=512m
								-javaagent:${ebeanagent.site}/${ebeanagent.version}/${ebeanagent.jar}
							</argLine>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

</project>
