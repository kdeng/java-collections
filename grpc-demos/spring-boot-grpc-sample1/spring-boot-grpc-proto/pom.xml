<!--              <relocations>-->
<!--                <relocation>-->
<!--                  <pattern>com.google.protobuf</pattern>-->
<!--                  <shadedPattern>${project.groupId}.${project.artifactId}.shaded.protobuf</shadedPattern>-->
<!--                </relocation>-->
<!--              </relocations>-->
<!--              <artifactSet>-->
<!--                <excludes>-->
<!--                  <exclude>io.grpc:*</exclude>-->
<!--                </excludes>-->
<!--              </artifactSet>-->
<!--            </configuration>-->
<!--          </execution>-->
<!--        </executions>-->
<!--      </plugin>-->
    </plugins>
  </build>

</project>
